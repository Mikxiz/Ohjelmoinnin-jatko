@model IEnumerable<Ohjelmoinnin_jatko.Models.Henkilot>
@{
	ViewBag.Title = "Index";
}
@section scripts {

	<script type="text/javascript">
		$(function () {
			$.getJSON("/customer/getlist", null, function (json) {
				var customers = JSON.parse(json);
				alert("Asiakkaiden lkm: " + customers.lenght);

				var html = "";
				for (var index = 0; index < customers.length; index++) {
					html += "<tr>" +
						"<td>" + customers[index].HenkiloID + "</td>" +
						"<td>" + customers[index].Etunimi + "</td>" +
						"<td>" + customers[index].Sukunimi + "</td>" +
						"<td>" + customers[index].Esimies + "</td>" +
						"</tr>\r\n";
				}

				$("#customerList tbody").html(html);
			});
		});
	</script>

}
<h2>Asiakkaat, dynaaminen tapa Ajaxilla</h2>


<table class="table table-striped" id="customerList">
	<thead>
		<tr>
			<th>Henkilo-id</th>
			<th>Etunimi</th>
			<th>Sukunimi</th>
			<th>Esimies</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>